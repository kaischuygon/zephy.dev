---
import { Icon } from "astro-icon/components";
import Layout from "../layouts/Layout.astro";

import { getCollection } from "astro:content";
import { Image } from "astro:assets";

const allPortfolioItems = (await getCollection('portfolio')).sort(
    (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<Layout title="Portfolio">
    <h1 class="mb-4 text-4xl font-bold">Portfolio</h1>
    <p class="mb-8">
        My portfolio of projects dating back to undergrad.
    </p>
    <div class="flex flex-col gap-2">
        {allPortfolioItems.map(item => (
            <a
                href={`/portfolio/${item.id}`}
                class="w-full shadow-square hover:shadow-square-2 flex gap-2 border"
            >
                <Image
                    src={item.data.img}
                    alt={item.data.img_alt}
                    width={250}
                    height={250}
                    class="aspect-video"
                />
                <div class="p-2">
                    <h2 class="text-xl font-semibold">
                        {item.data.title}
                    </h2>
                    <p>{item.data.description}</p>
                </div>
            </a>
            ))
        }
    </div>
</Layout>
