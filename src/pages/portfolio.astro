---
import { Icon } from "astro-icon/components";
import Layout from "../layouts/Layout.astro";

import { getCollection } from "astro:content";
import PortfolioItems from "../components/PortfolioItems.astro";

const allPortfolioItems = (await getCollection('portfolio')).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Portfolio">
    <h1 class="mb-4 text-4xl font-bold">Portfolio</h1>
    <p class="mb-8">
        My portfolio of projects dating back to undergrad.
    </p>
    <div class="flex flex-col gap-2">
        <PortfolioItems />
    </div>
</Layout>
