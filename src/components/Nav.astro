---
import { Icon } from "astro-icon/components";

let navlinks = {
    home: "/",
    about: "/about",
    portfolio: "/portfolio",
    blog: "/blog",
};

let extraLinks = {
    "📼 kino.wtf": {
        href: "https://kino.wtf",
        pinned: true,
    },
    "🍿 letterboxd": {
        href: "https://letterboxd.com/kschuyler/",
        pinned: false,
    },
    "✉️ contact": {
        href: "mailto:kai.schuyler@gmail.com",
        pinned: false,
    }
};
---

<nav class="md:sticky flex-wrap top-0 flex h-min max-h-screen flex-col items-end gap-2 text-right">
    <a href="/" class="m-1 block text-4xl md:text-8xl" aria-label="site logo">
        <Icon name="wind" title="site-logo" />
    </a>
    <h1 class="text-right text-xl font-bold">zephy.dev</h1>
    <h3>Kai's portfolio and blog</h3>
    {
        Object.entries(navlinks).map(([title, link]) => (
            <a href={link} class="block font-mono font-semibold">
                {title}
            </a>
        ))
    }
    <hr class="prose w-full" />
    {
        // Display extra links, with pinned ones first
        Object.entries(extraLinks)
            .sort(([, a], [, b]) =>
                a.pinned === b.pinned ? 0 : a.pinned ? -1 : 1
            )
            .map(([title, value]) => (
                <div class="flex items-center gap-1">
                    <a
                        href={value.href}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="block font-mono font-semibold"
                    >
                        {title}
                    </a>
                    {value.pinned && <div class="text-xs">📌</div>}
                </div>
            ))
    }
</nav>
