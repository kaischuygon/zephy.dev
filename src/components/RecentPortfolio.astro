---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import { getCollection } from "astro:content";

const { count = 3, ignore_id = null } = Astro.props;

const recentPortfolioItems = (await getCollection("portfolio"))
    .filter((item) => (ignore_id ? item.id !== ignore_id : item))
    .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
    .slice(0, count);
---

<div class="flex flex-wrap gap-2">
    {
        recentPortfolioItems.map((item) => (
            <a
                href={`/portfolio/${item.id}`}
                class="shadow-square hover:shadow-square-2 flex w-full gap-2 border"
            >
                <Image
                    src={item.data.img}
                    alt={item.data.img_alt}
                    width={250}
                    height={250}
                    class="aspect-video"
                />
                <div class="p-2">
                    <h2 class="text-xl font-semibold">{item.data.title}</h2>
                    <p>{item.data.description}</p>
                </div>
            </a>
        ))
    }
    <a
        href={`/portfolio`}
        class="shadow-square hover:shadow-square-2 flex w-full flex-col items-center justify-center gap-2 border"
    >
        <div class="p-2">
            view full portfolio
            <Icon class="inline" name="tabler:arrow-up-right" />
        </div>
    </a>
</div>
