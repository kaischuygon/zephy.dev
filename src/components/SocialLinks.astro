---
import { Icon } from "astro-icon/components";

const socialLinks = {
    github: {
        href: "https://github.com/kaischuygon",
        icon: "lineicons:github"
    },
    twitter: {
        href: "https://twitter.com/kaischuyler",
        icon: "lineicons:twitter-old"
    },
    linkedin: {
        href: "https://www.linkedin.com/in/kaischuyler/",
        icon: "lineicons:linkedin",
    },
    bluesky: {
        href: "https://bsky.app/profile/zephy.dev",
        icon: "bsky",
    },
};
---

<>
    {
        Object.entries(socialLinks).map(([name, { href, icon }]) => (
            <a
                href={href}
                target="_blank"
                rel="noopener noreferrer"
                class="text-2xl"
                title={name}
                aria-label={name}
            >
                <Icon name={icon} title={name} />
            </a>
        ))
    }
</>
